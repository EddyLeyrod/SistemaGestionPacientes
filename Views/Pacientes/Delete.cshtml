@model SistemaGestionPacientes.Models.Paciente

@{
    ViewBag.Title = "Eliminar Paciente";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-warning">
    <h4>¿Está seguro que desea eliminar este paciente?</h4>
</div>

<div class="card">
    <div class="card-header">
        <h4>Información del Paciente a Eliminar</h4>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd>@Html.DisplayFor(model => model.Nombre)</dd>

            <dt>@Html.DisplayNameFor(model => model.Apellido)</dt>
            <dd>@Html.DisplayFor(model => model.Apellido)</dd>

            <dt>@Html.DisplayNameFor(model => model.Telefono)</dt>
            <dd>@Html.DisplayFor(model => model.Telefono)</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
            <dd>@Html.DisplayFor(model => model.FechaNacimiento)</dd>

            <dt>@Html.DisplayNameFor(model => model.TipoSangre)</dt>
            <dd>@Html.DisplayFor(model => model.TipoSangre)</dd>

            <dt>@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
            <dd>@Html.DisplayFor(model => model.FechaRegistro)</dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color btn-actions-user">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}